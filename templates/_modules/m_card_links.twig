{# -------------------------------------------------
   Module: Card Link
------------------------------------------------- #}

{# Macros #}

{% set image 		= 	card.c_image.one() %}
{% set headline		=	card.plainHeadline %}
{% set links		=	card.links.all() %}

{#
   -------------------------------------------------
#}

<div class="l-item w-full sm:w-1/2 lg:w-1/3 | | mb-10 lg:mb-0">
	<div class="pb-1/2 relative text-white">
		<img class="absolute top-0 left-0 w-full h-full object-cover" src="{{ image.url }}" />
		<h3 class="e-header_five absolute w-full bottom-0 left-0 pb-6 px-8">{{ headline }}</h3>
	</div>
	<div class="bg-white px-8 py-8">
		{% for link in links %}
		<div>
			<a class="e-link | inline-block text-5 text-red-400 my-2" href="{{ link.cardLink.url }}">{{ link.cardLink.text }}</a>
		</div>
		{% endfor %}
	</div>
</div>